
@{
    ViewData["Title"] = "Dialog";
    Layout = null;
}
<style type="text/css">
    .dialog-iframe {
        width: 100%;
        height: 400px;
        border: none;
    }

    .modal-body {
        padding-top: 0px;
    }

    .app-dialog-title { font-weight: bold;}
</style>

<div class="modal" id="app-dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-info">
                <div class=""><span id="app-dialog-title"></span></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="app-dialog-content">

            </div>
        </div>
    </div>
</div>